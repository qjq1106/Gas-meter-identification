.uni-stat-tooltip-s {
  width: 160px;
  white-space: normal;
}
.uni-label-text {
  font-size: 14px;
  font-weight: bold;
  color: #555;
  margin-top: 17px;
  margin-bottom: 17px;
  margin-right: 5px;
}
.uni-stat--tab-x {
  display: flex;
  margin: 0 15px;
  white-space: nowrap;
}
.uni-stat--tab {
  display: flex;
  flex-wrap: wrap;
}
.uni-stat--tab-item {
  white-space: nowrap;
  font-size: 14px;
  color: #666;
  text-align: center;
  cursor: pointer;
  box-sizing: border-box;
  margin: 15px 0;
}
.uni-stat--tab-item-disabled {
  cursor: unset;
  opacity: 0.4;
}
.uni-stat--tab-item-line {
  margin-right: 30px;
  padding: 2px 0;
  border-bottom: 1px solid transparent;
}
.uni-stat--tab-item-line:last-child {
  margin-right: 0;
}
.uni-stat--tab-item-line-active {
  color: #2979ff;
  border-bottom: 1px solid #2979ff;
}
.uni-stat--tab-item-boldLine {
  box-sizing: border-box;
  margin-right: 30px;
  padding: 2px 0;
  border-bottom: 2px solid transparent;
}
.uni-stat--tab-item-boldLine:last-child {
  margin-right: 0;
}
.uni-stat--tab-item-boldLine-active {
  box-sizing: border-box;
  color: #2979ff;
  border-bottom: 2px solid #2979ff;
}
.uni-stat--tab-item-box {
  padding: 5px 15px;
  border: 1px solid #dcdfe6;
}
.uni-stat--tab-item-box:not(:last-child) {
  border-right-color: transparent;
}
.uni-stat--tab-item-box-active {
  box-sizing: border-box;
  border: 1px solid #2979ff !important;
}
@media screen and (max-width: 500px) {
.hide-on-phone {
    display: none;
}
.uni-stat--tab {
    flex-wrap: unset;
    overflow-x: auto !important;
}
}
.costom-box {
  display: flex;
  align-items: center;
  margin-left: 20px;
  height: auto;
  width: auto;
}
.costom-box .coston-inner {
  position: relative;
}
.costom-box .coston-inner .costom-dialog {
  position: absolute;
  top: 40px;
  right: 0;
  border: 1px #eee solid;
  box-sizing: border-box;
  width: 200px;
  border-radius: 5px;
  background-color: #fff;
  box-shadow: 0 0 5px 0px rgba(0, 0, 0, 0.1);
}
.costom-box .coston-inner .costom-dialog::before {
  content: "";
  position: absolute;
  right: 40px;
  top: -5px;
  width: 10px;
  height: 10px;
  transform: rotate(45deg);
  z-index: 0;
  background-color: #fff;
  box-shadow: 0 0 5px 1px rgba(0, 0, 0, 0.1);
}
.costom-box .coston-inner .costom-dialog .costom-dialog-inner {
  position: relative;
  padding: 15px;
  width: 100%;
  height: 100%;
  background-color: #fff;
  box-sizing: border-box;
  z-index: 2;
}
.costom-box .coston-inner .costom-dialog .costom-dialog-bottom {
  margin-top: 20px;
  display: flex;
  align-items: center;
}